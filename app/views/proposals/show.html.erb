<div class='page-header'>
  <h1><%= @proposal.title %></h1>
</div>

<div class='row'>
  <div class='span14'>

  	<% if notice then %>
	<div class='alert-message success'>
		<a class='close' href='#'>x</a>
		<p><%= notice %></p>
	</div>
	<% end %>

	<%= simple_format @proposal.description %>

	<div class='well show-well'>
		<strong>RMAS ID:</strong> <code><%= @proposal.rmas_id %></code>
	</div>

	<div class='links'>
		<%= link_to 'Edit', edit_proposal_path(@proposal), :class => 'btn' %>
		<%= link_to 'Back', proposals_path, :class => 'btn' %>
	</div>
  </div>
</div>
